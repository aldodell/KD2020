{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build MIXER with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++1z",
                "-stdlib=libc++",
                "mixer.cpp",
                "-o",
                "mixer.out",
                "--debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "Mix JS",
            "type": "shell",
            
            "command": "./mixer.out",
            "args": [
                "api.js",
                "kernel.js",
                "component.js",
                "window.js",
                "application.js",
                "desktop.js"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}